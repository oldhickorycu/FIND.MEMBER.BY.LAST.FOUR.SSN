[ -----------------------------------------------------------------
  FIND.MEMBER.BY.LAST.FOUR.SSN - Connor Blakeney
  Finds the member given the last four digits of their SSN.
  ----------------------------------------------------------------- ]

TARGET=ACCOUNT

DEFINE
 SSNNUMBER=CHARACTER
END

SETUP
 SSNNUMBER=CHARACTERREAD("LAST FOUR OF SSN:")
END

SELECT
 SEGMENT(NAME:SSN,6,9)=SSNNUMBER
END


PRINT TITLE="FIND MEMBER BY LAST FOUR SSN"
 HEADER="Account No  Short Name        SSN      "
 HEADER="---------------------------------------"

 COL=001 ACCOUNT:NUMBER
 COL=013 NAME:SHORTNAME
 COL=031 NAME:SSN
 NEWLINE

END


